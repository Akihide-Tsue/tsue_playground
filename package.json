{
  "name": "tsue_playground",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "lint:style": "stylelint './**/*.{css,scss,sass}'",
    "lint:style:fix": "stylelint --fix './**/*.{css,scss,sass}'",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json,css,scss}'",
    "check-types": "tsc --noEmit",
    "test-all": "run-s lint format lint:fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "gitDir": "./",
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.scss": "stylelint --fix --syntax=scss",
    "*.{js,jsx,ts,tsx,json,css,scss}": "prettier --write"
  },
  "dependencies": {
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "next": "12.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.0.5",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "eslint": "8.20.0",
    "eslint-config-next": "12.2.2",
    "eslint-config-prettier": "8.5.0",
    "prettier": "2.7.1",
    "typescript": "4.7.4",
    "yarn-run-all": "^3.1.1"
  }
}
